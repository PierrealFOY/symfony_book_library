<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

            <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block navbar %}
            <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
            <!-- Navbar content -->
                <div class="container-fluid p-1">
                    <a class="navbar-brand" href="#">Accueil</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse mx-3" id="navbarNav">
                        <ul class="navbar-nav mx-3 ">
                            <li class="nav-item px-3">
                                <a class="nav-link active" aria-current="page" href="#">Livres</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link" href="#">Auteurs</a>
                            </li>
                            <li class="nav-item px-3">
                                <a class="nav-link" href="#">Avis</a>
                            </li>
                            {# <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                            </li> #}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

    </head>
    <body>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
