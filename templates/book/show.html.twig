{% extends 'layout/layout.html.twig' %}

{% block title %}Livre{% endblock %}

{% block subBody %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ book.genre }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ book.releaseDate ? book.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ book.poster }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ book.rating }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_book_list') }}"><i class="bi bi-arrow-left-circle"> back to list</i></a>
    </div>
    <div>
        <button type="submit" class="btn btn-success">
            <a href="{{ path('app_book_edit', {'id': book.id}) }}"><i class="bi bi-pencil"></i> Edit</a>
        </button>
    </div>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}

