{% extends 'layout/layout.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block subBody %}
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ author.firstname }}</td>
            </tr>
            {# <tr>
                <th>Rating</th>
                <td>{{ author.rating }}</td>
            </tr> #}
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_author_list') }}"><i class="bi bi-arrow-left-circle"> back to list</i></a>
    </div>
    <div>
        <button type="submit" class="btn btn-success">
            <a href="{{ path('app_author_edit', {'id': author.id}) }}"><i class="bi bi-pencil"></i> Edit</a>
        </button>
    </div>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}

